<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.redis</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>An interesting little data structure server.</string>

      <key>Port</key>
      <integer><%= scope.lookupvar "redis::config::port" %></integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "redis::config::executable" %></string>
      <string><%= scope.lookupvar "redis::config::configfile" %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string><%= scope.lookupvar "::luser" %></string>

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "redis::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "redis::config::logdir" %>/console.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "redis::config::logdir" %>/console.log</string>
  </dict>
</plist>
