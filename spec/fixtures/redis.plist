<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.redis</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>An interesting little data structure server.</string>

      <key>Port</key>
      <integer>16379</integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string>/opt/boxen/homebrew/bin/redis-server</string>
      <string>/opt/boxen/config/redis/redis.conf</string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string>wfarr</string>

    <key>WorkingDirectory</key>
    <string>/opt/boxen/data/redis</string>

    <key>StandardErrorPath</key>
    <string>/opt/boxen/log/redis/console.log</string>

    <key>StandardOutPath</key>
    <string>/opt/boxen/log/redis/console.log</string>
  </dict>
</plist>
